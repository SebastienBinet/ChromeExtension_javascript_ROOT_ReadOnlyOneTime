{
  "manifest_version": 2,

  "name": "ROOT",
  "description": "ROOT",
  "version": "1.0.9",


  "background": {
    "scripts": ["background.js", "content_script_save_all_in_page.js"],
    "persistent": false
  },


  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "ROOT"
  },
  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content_script_shared.js", "content_script_periodic.js", "content_script_UI.js"]
    }
  ],
  "permissions": [
    "tabs", "activeTab", "http://*/*.hostname", "http://*/", "http://*/*", "https://*/*.hostname", "https://*/*" 
  ]
}
