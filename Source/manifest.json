{
  "manifest_version": 2,

  "name": "ROOT",
  "description": "ROOT",
  "version": "1.1.0",


  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },


  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "ROOT_v_1.1.0"
  },
  "icons": { "16": "icon.png",
           "48": "icon.png",
          "128": "icon.png" },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery-1.11.2.js", "element_getPosInfo.js", "DOMmanipulations.js", "storageAccesses.js", "content_script_periodic.js"]
    }
  ],
  "permissions": [
    "tabs", "activeTab", "http://*/*.hostname", "http://*/", "http://*/*", "https://*/*.hostname", "https://*/*" 
  ]
}
